import java.util.*;

public class CH11 {

	public static void main (String args[])
	{
		int x;
		System.out.println("Enter an integer to check");
		Scanner in = new Scanner (System.in);
		
		x = in.nextInt();
		
		if (x % 2 == 0)
			System.out.println(x + " is an even number");
		else
			System.out.println(x + " is an odd number");
	}
}