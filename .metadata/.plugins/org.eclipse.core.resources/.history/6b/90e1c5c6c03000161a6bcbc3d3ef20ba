class MyClass
{
	int k;
	MyClass(int k)
	{
		this.k=k;
	}
	void disp()
	{
		System.out.println(" k = " + k);
	}
	
	static void modify(MyClass temp)
	{
		++temp.k;
	}
}

public class CH51 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int k=100;
		
		MyClass v1=new MyClass(100);
		v1.disp();
		
		MyClass.modify(v1);
		
		v1.disp();
		System.out.println(" a = " + k);
	}

}
